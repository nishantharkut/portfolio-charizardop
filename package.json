    "@react-three/postprocessing": "^3.0.4",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/lodash": "^4.17.20",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "gsap": "^3.13.0",
    "lenis": "^1.3.8",
    "lodash": "^4.17.21",
    "motion": "^12.23.12",
    "next": "15.4.6",
    "nodemailer": "^7.0.5",
    "ogl": "^1.0.11",
